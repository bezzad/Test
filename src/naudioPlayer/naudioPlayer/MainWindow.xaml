<Window x:Class="naudioPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:naudioPlayer"
        mc:Ignorable="d"
        Title="AudioPayer" Height="150" Width="150" Closing="Window_Closing">
    <Grid>
        <Canvas >
            <Button Canvas.Top="0" Content="Open file" Width="150" Height="50" Click="openFileButton_Click"/>
            <Button Canvas.Top="50" Content="Play/Pause" Width="150" Height="50" Name ="pauseButton" IsEnabled="false"  Click="pauseButton_Click"/>
        </Canvas>
    </Grid>
</Window>
